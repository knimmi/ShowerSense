<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="350.0" spacing="20.0" style="-fx-background-color: #f0f4f8;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.showersense.RegisterController">
    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
    </padding>
    <children>
        <Label text="Nieuwe Gebruiker" textFill="#2c3e50">
            <font>
                <Font name="Arial Rounded MT Bold" size="24.0" />
            </font>
        </Label>
        <VBox spacing="10.0">
            <children>
                <Label text="Naam" textFill="#7f8c8d">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                </Label>
                <TextField fx:id="nameField" promptText="Typ je naam..." />
                <Label text="E-mailadres" textFill="#7f8c8d">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                </Label>
                <TextField fx:id="emailField" promptText="Typ je e-mailadres..." />
                <Label text="Wachtwoord" textFill="#7f8c8d">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                </Label>
                <PasswordField fx:id="passwordField" promptText="••••••••" />
            </children>
        </VBox>
        <Label fx:id="messageLabel" textFill="#e74c3c" visible="false" />
        <Button onAction="#handleRegister" text="Registreren" />
    </children>
</VBox>
