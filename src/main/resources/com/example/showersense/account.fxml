<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_LEFT" maxWidth="500.0" prefHeight="600.0" spacing="25.0" style="-fx-background-color: #f0f4f8;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.showersense.AccountController">
    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
    </padding>
    <children>
        <Label text="Mijn Account">
            <font>
                <Font name="Arial Rounded MT Bold" size="32.0" />
            </font>
        </Label>
        <VBox spacing="8.0">
            <children>
                <Label text="Naam" style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;" />
                <TextField fx:id="nameField" style="-fx-font-size: 16px; -fx-background-radius: 5; -fx-border-radius: 5; -fx-padding: 8;" />
            </children>
        </VBox>
        <VBox spacing="8.0">
            <children>
                <Label text="E-mailadres" style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;" />
                <TextField fx:id="emailField" style="-fx-font-size: 16px; -fx-background-radius: 5; -fx-border-radius: 5; -fx-padding: 8;" />
            </children>
        </VBox>
        <VBox spacing="8.0">
            <children>
                <Label text="Nieuw Wachtwoord (leeg laten om niet te wijzigen)" style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;" />
                <PasswordField fx:id="newPasswordField" style="-fx-font-size: 16px; -fx-background-radius: 5; -fx-border-radius: 5; -fx-padding: 8;" />
            </children>
        </VBox>
        <VBox spacing="8.0">
            <children>
                <Label text="Bevestig Nieuw Wachtwoord" style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;" />
                <PasswordField fx:id="confirmPasswordField" style="-fx-font-size: 16px; -fx-background-radius: 5; -fx-border-radius: 5; -fx-padding: 8;" />
            </children>
        </VBox>
        <Label fx:id="messageLabel" visible="false" style="-fx-font-size: 14px;" />
        <Button onAction="#handleSaveChanges" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 5; -fx-cursor: hand;" text="Wijzigingen Opslaan" />
    </children>
</VBox>
